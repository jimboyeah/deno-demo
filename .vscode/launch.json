{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect-brk", "--allow-env", "--unstable", "--allow-net", "${file}", "https://api.github.com/users/github"],
      "outputCapture": "std",
      "attachSimplePort": 9229
    },
    {
      "name": "Node",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "Node",
      "runtimeArgs": ["--inspect-brk", "${file}", "https://api.github.com/users/github"],
      "outputCapture": "std",
      "attachSimplePort": 9229
    },
    {
      "name": "Deno Run",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--allow-env", "--unstable", "--allow-net", "${file}", "https://api.github.com/users/github"],
    },
    {
      "name": "Cargo Run",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "cargo",
      "runtimeArgs": ["run", "${fileDirname}\\.."],
      "cwd": "${fileDirname}\\.."
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    }
  ]
}